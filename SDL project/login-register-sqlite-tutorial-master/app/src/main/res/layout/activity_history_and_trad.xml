<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidtutorialshub.loginregister.activities.history_and_trad">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/back">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:padding="16dp"
        android:text="History and tradition"

        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/para1"
            android:text="@string/parag1"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navale"
            android:layout_below="@+id/para1"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:id="@+id/navle"/>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/parag2"
            android:text="@string/parag2"
            android:layout_below="@+id/navle"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content" />






    </RelativeLayout>

</ScrollView>
